{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "schedule": [
    "0 0 * * 1/2"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "automergeStrategy": "squash",
    "platformAutomerge": false
  },
  "dependencyDashboard": false,
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)",
    ":automergeMinor"
  ],
  "packageRules": [
    {
      "description": "Automatically merge minor and patch-level updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": false
    },
    {
      "description": "Disable .python-version file updates",
      "matchFileNames": [
        ".python-version"
      ],
      "enabled": false
    },
    {
      "description": "Disable Dockerfile tag updates",
      "matchFileNames": [
        "Dockerfile"
      ],
      "enabled": false
    }
  ]
}
